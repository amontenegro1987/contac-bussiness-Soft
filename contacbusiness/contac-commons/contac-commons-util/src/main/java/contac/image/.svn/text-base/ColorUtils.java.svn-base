package contac.image;

import java.awt.*;

/**
 * Color utils for requiered fields
 * User: Eddy Montenegro
 * Date: 7/20/11
 * Time: 3:59 PM
 */
public class ColorUtils {

    //Red color required
    private static final int RED_COLOR_REQUIRED = 255;
    //Green color required
    private static final int GREEN_COLOR_REQUIRED = 204;
    //Blue color required
    private static final int BLUE_COLOR_REQUIRED = 204;

    /**
     * Getting color required
     * @return Color
     */
    public static Color getColorRequired() {
        return new Color(RED_COLOR_REQUIRED, GREEN_COLOR_REQUIRED, BLUE_COLOR_REQUIRED);
    }

    /**
     * Getting color success validation
     * @return Color
     */
    public static Color getColorSuccess() {
        return Color.white;
    }
}
